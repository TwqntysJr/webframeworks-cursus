{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "args": [
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}
